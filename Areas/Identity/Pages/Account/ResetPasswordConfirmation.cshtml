@page
@model ResetPasswordConfirmationModel
@{
    ViewData["Title"] = "Reset password confirmation";
    Layout = "~/Views/Shared/_LayoutBeforeLogin.cshtml";
}

<div class="login-main">
    <div class="container">
        <div class="login-block">
            <div class="left">
                <div class="logo"><img src="~/assets/images/logo.png" alt="Logo" /></div>
                <div class="login-img"><img src="~/assets/images/login-inner.png" class="login-inner" /></div>
            </div>
            <div class="right">
                <h1>@ViewData["Title"]</h1>
                <p class="text-center">Your password has been reset.<br/> Please <a style="color:blue" asp-page="./Login">click here to log in</a>.</p>
            </div>
        </div>
    </div>
</div>