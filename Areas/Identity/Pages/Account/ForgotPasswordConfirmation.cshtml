@page
@model ForgotPasswordConfirmation
@{
    ViewData["Title"] = "Forgot password confirmation";
    Layout = "~/Views/Shared/_LayoutBeforeLogin.cshtml";
}

<div class="login-main">
    <div class="container">
        <div class="login-block">
            <div class="left">
                <div class="logo"><img src="~/assets/images/logo.png" alt="Logo" /></div>
                <div class="login-img"><img src="~/assets/images/forgot-password-inner.png" class="forgot-password-inner" /></div>
            </div>
            <div class="right">
                <h1>@ViewData["Title"]</h1>
                <p class="text-center">Please check your email to reset your password.</p>
            </div>
        </div>
    </div>
</div>
