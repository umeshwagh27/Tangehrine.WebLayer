@page
@model ResetPasswordModel
@{
    ViewData["Title"] = "Reset password";
    Layout = "~/Views/Shared/_LayoutBeforeLogin.cshtml";
}

<div class="login-main">
    <div class="container">
        <div class="login-block">
            <div class="left">
                <div class="logo"><img src="~/assets/images/logo.png" alt="Logo" /></div>
                <div class="login-img"><img src="~/assets/images/login-inner.png" class="login-inner" /></div>
            </div>
            <div class="right">
                <h1>@ViewData["Title"]</h1>
                
                <form method="post" class="login-cmn-form">
                    <input asp-for="Input.Code" type="hidden" />

                    <div class="mb-3 mb-md-4">
                        <input asp-for="Input.Email" class="form-control" placeholder="Email" hidden/>
                    </div>

                    <div class="mb-3 mb-md-4">
                        <label asp-for="Input.Password" class="form-label">Enter new password</label>
                        <input asp-for="Input.Password" class="form-control" placeholder="*********" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>

                    <div class="mb-3 mb-md-4">
                        <label asp-for="Input.ConfirmPassword" class="form-label">Confirm password</label>
                        <input asp-for="Input.ConfirmPassword" class="form-control" placeholder="*********" />
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>

                    <button type="submit" class="btn btn-primary w-100 btn-50">Reset</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
