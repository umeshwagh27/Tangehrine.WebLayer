@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot Password?";
    Layout = "~/Views/Shared/_LayoutBeforeLogin.cshtml";
}
<div class="login-main">
    <div class="container">
        <div class="login-block">
            <a class="back-link" href="login.html"><i class="fas fa-arrow-left me-2"></i>Back to Login</a>
            <div class="left">
                <div class="logo"><img src="~/assets/images/logo.png" alt="Logo" /></div>
                <div class="login-img"><img src="~/assets/images/forgot-password-inner.png" class="forgot-password-inner" /></div>
            </div>
            <div class="right">
                <h1>@ViewData["Title"]</h1>
                <p class="mb-4">Don’t worry! Just fill in your email and we’ll help you reset your password.</p>
                <form method="post" class="login-cmn-form">                
                    <div class="mb-4">
                        <input asp-for="Input.Email" class="form-control" placeholder="Email" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-primary w-100 btn-50">Reset Password</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
