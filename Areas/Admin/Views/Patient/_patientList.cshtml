@model List<Tangehrine.ServiceLayer.Dtos.Admin.PatientDto>;

@foreach (var item in Model)
{
<div class="col-sm-6 col-xl-4 col-xxl-3">
    <div class="patient-block">       
        <div class="media mb-3">
            <div class="bordered-img">
                @if (item.PatientPhotoUrl != null)
                {
                    <img src="~/PatientImages/@item.PatientPhotoUrl" alt="avatar" />
                }
                else
                {
                    <img src="~/assets/images/avatar-3.png" alt="avatar" />
                }
            </div>
            <div class="media-body">
                <div class="action-btns">
                    <button class="action-btn share" onclick="SharePatientPopup(@item.Id);"><i class="fa fa-share-alt"></i></button>
                    <button class="action-btn edit" onclick="OpenAddEditPopup(@item.Id);"><i class="far fa-edit"></i></button>
                    <button class="action-btn delete" onclick="DeletePatient(@item.Id);"><i class="far fa-trash-alt"></i></button>
                    <button class="action-btn download" onclick="printReportAsPDF(@item.Id);"><i class="far fa-arrow-alt-circle-down"></i></button>
                </div>
                    @if (item.Suffix !=null || item.MI !=null)
                    {
                         <h3>@item.FirstName @item.LastName (@item.MI,@item.Suffix)</h3>
                    }else{
                        <h3>@item.FirstName @item.LastName</h3>
                    }
                <span class="details-inner"><i class="fas fa-birthday-cake"></i>@item.BirthDate.ToString("MM-dd-yyyy").Replace("/", "-")</span>
            </div>
        </div>
        <div class="patient-details mb-3 mb-md-4"> 
            <a class="details-inner" href="tel:8602165904120"><i class="fas fa-mobile-alt"></i>@item.Mobile @item.Mobile2</a>
                @if (item.RelativeFirstName != null)
                {
                    <span class="details-inner"><i class="fas fa-user-tie"></i>@item.RelativeFirstName @item.RelativeLastName [@item.RelationShipName]</span>
                    <a class="details-inner" href="tel:2036101105"><i class="fas fa-phone"></i>@item.RelativePhoneNo</a>
                }else{
                     <span class="details-inner"><i class="fas fa-user-tie"></i>Emergency contact(Not available)</span>
                }    
              
            <a class="details-inner" href="mailto:jnray15@sbcgglobal.net"><i class="fas fa-envelope"></i>@item.Email</a>
            <address class="details-inner"><i class="fas fa-map-marker-alt"></i>@item.Address</address>
        </div>
        <a href="@Url.Action("Index", "VisitProfile", new { Id = item.Id })" class="btn btn-light btn-50 w-100">
            Visit Profile
            <svg version="1.1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" x="0px" y="0px" viewBox="0 0 31 14.7" style="enable-background: new 0 0 31 14.7;" xml:space="preserve">
            <path d="M30.7,8.1c0.4-0.4,0.4-1,0-1.4l-6.4-6.4c-0.4-0.4-1-0.4-1.4,0c-0.4,0.4-0.4,1,0,1.4l5.7,5.7L22.9,13 c-0.4,0.4-0.4,1,0,1.4c0.4,0.4,1,0.4,1.4,0L30.7,8.1z M0,8.4h30v-2H0V8.4z" />
        </svg>
        </a>
    </div>
</div>
}
